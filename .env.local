# Local Development Environment Variables
# This file is intended for local development with Docker Compose.
# Do not use these settings in production.

# Flask Configuration
SECRET_KEY=local-secret-key-for-development
FLASK_APP=run.py
FLASK_ENV=development

# Database Configuration (uses Docker Compose service name)
DATABASE_URL=postgresql://admin:mysuperpass@db:5432/ml_learnlab

# Redis Configuration (uses Docker Compose service name)
REDIS_URL=redis://broker:6379/0
CELERY_BROKER_URL=redis://broker:6379/0
CELERY_RESULT_BACKEND=redis://broker:6379/0

# JWT Configuration
JWT_SECRET_KEY=local-jwt-secret-key-for-development
JWT_ACCESS_TOKEN_EXPIRES=28800 # 8 hours for local dev

# File Upload Configuration
USER_UPLOADS_DIR=./uploads
MODELS_DIR=./models
MAX_CONTENT_LENGTH=16777216

# CORS Configuration (allow default Vite port)
CORS_ORIGINS=http://localhost:5173

# Socket.IO Configuration
SOCKETIO_MESSAGE_QUEUE=redis://broker:6379/0

# Rate Limiting (disabled for local dev)
RATE_LIMIT_ENABLED=false
